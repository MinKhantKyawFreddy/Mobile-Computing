<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search recipes..."
        android:iconifiedByDefault="false"/>


    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnVegan"
            android:text="Vegan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnVegetarian"
            android:text="Vegetarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnGlutenFree"
            android:text="Gluten-Free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <!-- Add Recipe Button -->
    <Button
        android:id="@+id/btnAddRecipe"
        android:text="Add Recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Category Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/salad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/category_salad"
            android:contentDescription="Salad"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/mainDish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/category_main"
            android:contentDescription="Main Dish"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/drinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/catergory_drinks"
            android:contentDescription="Drinks"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/desserts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/category_dessert"
            android:contentDescription="Desserts"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- RecyclerView for Popular Recipes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPopular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Favorites Button -->
    <Button
        android:id="@+id/btnFavorites"
        android:text="Favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
